<div id="container_slider--story">
    <div id="slider-wrapper">
        <div class="inner-wrapper">
            <input checked type="radio" name="slide" class="control" id="Slide1" />
            <label for="Slide1" id="s1"></label>
            <input type="radio" name="slide" class="control" id="Slide2" />
            <label for="Slide2" id="s2"></label>
            <input type="radio" name="slide" class="control" id="Slide3" />
            <label for="Slide3" id="s3"></label>
            <div class="overflow-wrapper">
                <div class="slider1">
                    <div class="slide slide1-img1" href=""></div>
                    <div class="slide slide1-img2" href=""></div>
                    <div class="slide slide1-img3" href=""></div>
                </div>
                <div class="slider2 hide_slider">
                    <div class="slide slide2-img1" href=""></div>
                    <div class="slide slide2-img2" href=""></div>
                    <div class="slide slide2-img3" href=""></div>
                </div>
                <div class="slider3 hide_slider">
                    <div class="slide slide3-img1" href=""></div>
                    <div class="slide slide3-img2" href=""></div>
                    <div class="slide slide3-img3" href=""></div>
                </div>
                <div class="slider4 hide_slider">
                    <div class="slide slide4-img1" href=""></div>
                    <div class="slide slide4-img2" href=""></div>
                    <div class="slide slide4-img3" href=""></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="container_story">
    <div class="story">
        {{#stories}}
            <div class="story_intro">
                <div class="title_story">
                    <h4>{{story.date}}</h4>
                    <h1>{{story.firstname}}</h1>
                    <h1>{{story.secondname}}</h1>
                    <h1>{{story.intro-sentence}}</h1>
                </div>
                <div class="description_story">
                    <h3>{{story.description}}</h3>
                </div>
                <div class="para_story">
                    <p>{{story.story-part1.one}}</p>
                </div>
                <div class="para_story">
                    <p>{{story.story-part1.two}}</p>
                </div>
            </div>
            <div class="story_part1">
                <div class="para_story">
                    <p>{{story.story-part2.one}}</p>
                </div>
                <div class="para_story">
                    <p>{{story.story-part2.two}}</p>
                </div>
                {{#if story.story-part2.three}}
                    <div class="para_story">
                        <p>{{story.story-part2.three}}</p>
                    </div>
                {{/if}}
                {{#if story.story-part2.four}}
                    <div class="para_story">
                        <p>{{story.story-part2.four}}</p>
                    </div>
                {{/if}}
                {{#if story.story-part3}}
                    <div class="para_story">
                        <p>{{story.story-part3.one}}</p>
                    </div>
                {{/if}}
            </div>
        {{/stories}}
    </div>
</div>
